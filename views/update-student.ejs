      <input type=number name="age" value="<%= result.age %>"  placeholder="enter student age" />
      <br /><br />
      <input type="text" name="email" value="<%= result.email %>"  placeholder="enter student email" />
      <br /><br />
      <button type="submit">Update Student</button>
    </form>
</body>
</html>